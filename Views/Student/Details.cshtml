@model WebApp2ByAmrit.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div class="card">
    <div class="card-header">
        <h2>@Model.Name</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Student ID</dt>
            <dd class="col-sm-9">@Model.StdID</dd>
            
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            
            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>
            
            <dt class="col-sm-3">Faculty</dt>
            <dd class="col-sm-9">@Model.Faculty</dd>
            
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            
            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
</div> 